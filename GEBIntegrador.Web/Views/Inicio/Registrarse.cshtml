                            {
                                <div clas="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }

                            <div class="text-center">¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")" style="color: #4FA0CA">Iniciar Sesión</a></div>
                            <div class="text-center">¿Olvidaste tu contraseña? <a href="@Url.Action("RecuperarClave","Inicio")" style="color: #4FA0CA">Solicitar nueva contraseña</a></div>
                             
                        </form>
