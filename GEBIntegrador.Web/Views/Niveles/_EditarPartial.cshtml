@model GEBIntegrador.Dto.NivelesDto

@{
    ViewData["Title"] = "_EditarPartial";
}

<h1>Editar nivel @Model.v_descripcion</h1>

<hr />
<div class="row">
    <div class="col">
        <form id="form" data-model='@Json.Serialize(Model)'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="v_descripcion" class="control-label"></label>
                <input asp-for="v_descripcion" class="form-control" />
                <span asp-validation-for="v_descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="n_nivel" class="control-label"></label>
                <input asp-for="n_nivel" class="form-control" />
                <span asp-validation-for="n_nivel" class="text-danger"></span>
            </div>
            <hr />

            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/niveles/editarnivel.js" type="module"></script>

